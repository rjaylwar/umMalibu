<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/um_grey_blue">

    <include
        layout="@layout/toolbar_basic"
        android:id="@+id/toolbar"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:fillViewport="true">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.parse.ummalibu.EventsDetailActivity"
            >

            <com.parse.ParseImageView
                android:id="@+id/events_detail_imgview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Title"
                android:textColor="#ff07e2ff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/event_detail_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:text="Description"
                android:layout_gravity="start"
                android:id="@+id/event_description_long"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:text="Date"
                android:textColor="#fff5fffa"
                android:layout_gravity="center_horizontal"
                android:id="@+id/event_detail_date"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:text="Register"
                android:layout_gravity="center_horizontal"
                android:id="@+id/event_detail_register_button"
                android:textColor="#ff73ff00"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:text="Cost"
                android:textColor="#ff73ff00"
                android:layout_gravity="center_horizontal"
                android:id="@+id/event_detail_cost"
                android:textStyle="italic|bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout><!-- From: file:/Users/rjaylward/Google%20Drive/Android%20Studio/Parse-Starter-Project-1.8.0/ParseStarterProject/res/layout/activity_events_detail.xml -->