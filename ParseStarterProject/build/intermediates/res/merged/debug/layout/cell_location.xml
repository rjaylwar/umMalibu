<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    card_view:cardPreventCornerOverlap="false"
    android:id="@+id/cell_location_card">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cell_location_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/very_light_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cell_location_image"
            android:layout_toEndOf="@+id/cell_location_image">

            <TextView
                android:id="@+id/cell_location_name"
                android:text="UM University Ministries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:lines="1"/>

            <TextView
                android:id="@+id/cell_location_address"
                android:text="24255 Pacific Coast Hwy. Malibu CA"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_grey"
                android:textSize="13dp"
                android:lines="1"/>

        </LinearLayout>

        <include layout="@layout/breakline"/>

    </RelativeLayout>

</android.support.v7.widget.CardView><!-- From: file:/Users/rjaylward/Google%20Drive/Android%20Studio/Parse-Starter-Project-1.8.0/ParseStarterProject/res/layout/cell_location.xml -->