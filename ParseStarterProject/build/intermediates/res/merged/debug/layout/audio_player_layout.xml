<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/audio_player_card"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_player_height"
        android:background="@color/um_dark_blue">

        <ImageView
            android:layout_width="@dimen/media_player_height"
            android:layout_height="@dimen/media_player_height"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/media_player_image"/>

        <ProgressBar
            android:id="@+id/media_player_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/media_player_seek_bar"
            android:layout_toLeftOf="@+id/media_player_seek_bar"
            android:layout_toStartOf="@+id/media_player_seek_bar">
        </ProgressBar>

        <TextView
            android:id="@+id/media_player_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behind Closed Doors"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true" />

        <SeekBar
            android:id="@+id/media_player_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/media_player_play_button"
            android:layout_toRightOf="@+id/media_player_image"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/media_player_count_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_marginLeft="16dp"
            android:text="0.00"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/media_player_image"
            android:layout_toEndOf="@+id/media_player_image"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/media_player_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:text="-0.00"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/media_player_play_button"
            android:layout_toStartOf="@+id/media_player_play_button" />

        <Button
            android:layout_width="@dimen/media_player_button_size"
            android:layout_height="@dimen/media_player_height"
            android:id="@+id/media_player_play_button"
            android:layout_centerVertical="true"
            android:text="\u25B6"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_outline"/>

    </RelativeLayout>

</android.support.v7.widget.CardView><!-- From: file:/Users/rjaylward/Google%20Drive/Android%20Studio/Parse-Starter-Project-1.8.0/ParseStarterProject/res/layout/audio_player_layout.xml -->