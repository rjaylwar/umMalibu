<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rja.bandsintownexercise.UMberActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/widget_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"/>

    <fragment
        android:id="@+id/map"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:id="@+id/umber_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/umber_driver_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/transparent_white"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/umber_driver_image"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/transparent_grey"/>

        <LinearLayout
            android:id="@+id/umber_driver_label_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/umber_driver_image"
            android:layout_toLeftOf="@+id/umber_contact_button">

            <TextView
                android:id="@+id/umber_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="Driver"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/umber_car_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/light_grey"
                android:text="Red Corvette"/>

        </LinearLayout>

        <Button
            android:id="@+id/umber_contact_button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="Contact"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/umber_cancel_button"
            android:textSize="13dp"
            android:textColor="@color/um_highlight_blue"/>

        <Button
            android:id="@+id/umber_cancel_button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:textColor="@color/red"/>

    </RelativeLayout>

</RelativeLayout>