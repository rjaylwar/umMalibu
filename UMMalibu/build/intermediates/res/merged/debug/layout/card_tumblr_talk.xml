<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/um_grey_blue"
    android:clickable="true">

    <include layout="@layout/breakline"/>

    <ImageView
        android:layout_height="64dp"
        android:layout_width="64dp"
        android:layout_margin="16dp"
        android:background="@color/light_grey"
        android:scaleType="fitXY"
        android:id="@+id/tumblr_talk_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tumblr_talk_image"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tumblr_talk_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Title"
            android:lines="1"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tumblr_talk_subtitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Subtitle"
            android:textSize="16dp"
            android:lines="1"
            android:layout_marginTop="1dp"
            android:textColor="@color/light_grey_text"/>

        <TextView
            android:id="@+id/tumblr_talk_date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="12/12/15"
            android:textSize="12dp"
            android:lines="1"
            android:layout_marginTop="1dp"
            android:textColor="@color/medium_grey"/>

    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/rjaylward/Google%20Drive/Android%20Studio/Parse-Starter-Project-1.8.0/UMMalibu/res/layout/card_tumblr_talk.xml -->